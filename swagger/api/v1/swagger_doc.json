{
  "swagger": "2.0",
  "info": {
    "title": "API documentation",
    "version": "v1"
  },
  "paths": {
    "/api/v1/products": {
      "get": {
        "summary": "Retrieves all products.",
        "tags": [
          "Products"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "products found"
          }
        }
      },
      "post": {
        "summary": "Create a product.",
        "tags": [
          "Products"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "product",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "sku": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "price": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "sku",
                "type",
                "price"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Product created"
          },
          "422": {
            "description": "Product creation failed for parameter missing"
          }
        }
      }
    },
    "/api/v1/products/{id}": {
      "get": {
        "summary": "Retrieves a product.",
        "tags": [
          "Products"
        ],
        "description": "Retrieving a specific product by id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Product found"
          },
          "404": {
            "description": "Product not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a product.",
        "tags": [
          "Products"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "204": {
            "description": "Destroy the product"
          }
        }
      }
    },
    "/api/v1/stores": {
      "get": {
        "summary": "Retrieves all stores.",
        "tags": [
          "Stores"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "stores found"
          }
        }
      },
      "post": {
        "summary": "Create a store.",
        "tags": [
          "Stores"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "store",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "address": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "email",
                "address",
                "phone"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Store created"
          },
          "422": {
            "description": "Store creation failed for parameter missing"
          }
        }
      }
    },
    "/api/v1/stores/{id}": {
      "get": {
        "summary": "Retrieves a store.",
        "tags": [
          "Stores"
        ],
        "description": "Retrieving a specific store by id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Store found"
          },
          "404": {
            "description": "Store not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a store.",
        "tags": [
          "Stores"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "204": {
            "description": "Destroy the store"
          }
        }
      }
    }
  }
}